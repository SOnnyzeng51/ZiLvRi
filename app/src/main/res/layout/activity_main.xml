<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fitsSystemWindows="true">

    <!-- 内容区域 -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="80dp"/>

    <!-- 底部导航栏 -->
    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottom_app_bar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_gravity="bottom"
        app:backgroundTint="@color/card_background"
        app:fabCradleMargin="12dp"
        app:fabCradleRoundedCornerRadius="32dp"
        app:fabCradleVerticalOffset="8dp"
        app:elevation="8dp"
        app:hideOnScroll="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <!-- 首页 -->
            <LinearLayout
                android:id="@+id/nav_home"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/iv_home"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@drawable/ic_home"
                    app:tint="@color/primary"/>

            </LinearLayout>

            <!-- 备忘录 -->
            <LinearLayout
                android:id="@+id/nav_memo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/iv_memo"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@drawable/ic_memo"
                    app:tint="@color/text_hint"/>

            </LinearLayout>

            <!-- 中间占位 -->
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <!-- 统计（原来的日历） -->
            <LinearLayout
                android:id="@+id/nav_stats"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/iv_stats"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@drawable/ic_stats"
                    app:tint="@color/text_hint"/>

            </LinearLayout>

            <!-- 我的 -->
            <LinearLayout
                android:id="@+id/nav_profile"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/iv_profile"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@drawable/ic_profile"
                    app:tint="@color/text_hint"/>

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.bottomappbar.BottomAppBar>

    <!-- 中间添加按钮 -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add"
        android:contentDescription="添加"
        app:layout_anchor="@id/bottom_app_bar"
        app:backgroundTint="@color/primary"
        app:tint="@android:color/white"
        app:fabSize="normal"
        app:elevation="6dp"
        app:shapeAppearanceOverlay="@style/FabShape"/>

    <!-- 庆祝动画覆盖层 -->
    <com.ziluri.app.ui.common.CelebrationView
        android:id="@+id/celebration_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:elevation="100dp"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
